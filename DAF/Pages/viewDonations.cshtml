@page
@model DAF.Pages.viewDonationsModel
@{
    Layout = "_AdminLayout";
}
<div>
    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center">
            <h1 class="display-4 text-white animated slideInDown mb-4">Donations</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                    <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                    <li class="breadcrumb-item text-primary active" aria-current="page">Donations</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->

    <div container-fluid py-5>
        <div class="container">
            <center><div class="d-inline-block rounded-pill bg-secondary text-primary py-1 px-3 mb-3">View Donations</div></center>
            
            <form method="post">
                <div class="col-12">
                    <label>Select Category(Required*)</label><br />
                    <select class="form-control" name="category" id="showCategory">
                        <option value="SELECT" selected> Select </option>
                        <option value="MONEY"> Monetary </option>
                        <option value="GOODS"> Goods </option>
                    </select><br />
                </div>
                <div class="col-12">
                    <button class="btn btn-primary px-5" style="height: 60px;" type="submit">
                        Display Donations
                        <div class="d-inline-flex btn-sm-square bg-white text-primary rounded-circle ms-2">
                            <i class="fa fa-arrow-right"></i>
                        </div>
                    </button>
                </div>
            </form>
            
            <h1 class="display-6 mt-5 mb-5">Donations</h1>
            <p>Donations Received:</p>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Category</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var donates in Model.donationsMade){
                        <tr>
                            <td>@donates.Name</td>
                            <td>@donates.Email</td>
                            <td>@donates.Category</td>
                            <td>@donates.Date</td>
                            <td>@donates.Amount</td>
                            <td>@donates.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>