@page
@model DAF.Pages.loginRegisterModel
@{
    Layout = "_NotLoggedLayout";
}
<!-- Page Header Start -->
<div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center">
        <h1 class="display-4 text-white animated slideInDown mb-4">Login/Register</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Login/Register</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<!-- Login/Register Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5">
            <!--Login Start-->
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <h1 class="display-6 mb-5 text-center">Login</h1>
                <div class="bg-secondary p-5">
                    <form asp-page-handler="Login" method="post">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="email" class="form-control bg-light border-0" asp-for="logMail" name="emailCheck" id="loginEmail" placeholder="Your Email">
                                    <label for="loginEmail">Your Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="password" class="form-control bg-light border-0" asp-for="logPassword" name="passwordCheck" id="loginPassword" placeholder="Your Password">
                                    <label for="loginPassword">Password</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary px-5" style="height: 60px;" type="submit">
                                    Login
                                    <div class="d-inline-flex btn-sm-square bg-white text-primary rounded-circle ms-2">
                                        <i class="fa fa-arrow-right"></i>
                                    </div>
                                </button>
                            </div>
                        </div>
                    </form>
                    @if(Model.dataMatch)
                    {
                        <h5>Incorrect credentials.</h5> 
                    }
                </div>
            </div>
            <!--Login End-->

            <!--Register Start-->
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <h1 class="display-6 mb-5 text-center">Register</h1>
                <div class="bg-secondary p-5">
                    <form method="post">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control bg-light border-0" name="name" id="registerName" placeholder="Your Name">
                                    <label for="registerName">Name</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control bg-light border-0" name="surname" id="registeSurname" placeholder="Your Surname">
                                    <label for="registeSurname">Surname</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="email" class="form-control bg-light border-0" name="email" id="registerEmail" placeholder="Your Email">
                                    <label for="registerEmail">Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control bg-light border-0" name="phone" id="phoneNumber" placeholder="Your Phone Number">
                                    <label for="phoneNumber">Phone Number</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="password" class="form-control bg-light border-0" name="regPassword" id="registerPassword" placeholder="Your Password">
                                    <label for="registerPassword">Password</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary px-5" style="height: 60px;" type="submit">
                                    Register
                                    <div class="d-inline-flex btn-sm-square bg-white text-primary rounded-circle ms-2">
                                        <i class="fa fa-arrow-right"></i>
                                    </div>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!--Register End-->
        </div>
    </div>
</div>
<!-- Login/Register End -->
