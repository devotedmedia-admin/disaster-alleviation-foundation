@page
@model DAF.Pages.captureModel
@{
}
<div>
    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center">
            <h1 class="display-4 text-white animated slideInDown mb-4">Capture Disaster</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                    <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                    <li class="breadcrumb-item text-primary active" aria-current="page">Capture Disaster</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Capture Start -->
    <div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="d-inline-block rounded-pill bg-secondary text-primary py-1 px-3 mb-3">Capture Disaster</div>
                    <h1 class="display-6 mb-5">Capture A New Disaster</h1>
                </div>
            <div class="col-lg-6">
                    @if (Model.errorMessage.Length > 0)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong>@Model.errorMessage</strong>
                            <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label='Close'></button>
                        </div>
                    }
                <form method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="date" class="form-control" name="start" id="startDate" placeholder="Start Date">
                                <label for="startDate">start Date</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="date" class="form-control" name="end" id="endDate" placeholder="End Date">
                                <label for="endDate">End Date</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" name="place" id="location" placeholder="Location">
                                <label for="location">Location</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Describe the disaster" name="description" id="disasterDescription" style="height: 100px"></textarea>
                                <label for="disasterDescription">Description</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" name="aid" id="aidType" placeholder="Required Aid Type">
                                <label for="aidType">Required Aid Type</label>
                            </div>
                        </div>
                            @if (Model.successMessage.Length > 0)
                            {
                                <div class="col-12">
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <strong>@Model.successMessage</strong>
                                        <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label='Close'></button>
                                    </div>
                                </div>
                            }
                        <div class="col-12">
                            <button class="btn btn-primary py-2 px-3 me-3" type="submit">
                                Capture Disaster
                                <div class="d-inline-flex btn-sm-square bg-white text-primary rounded-circle ms-2">
                                    <i class="fa fa-arrow-right"></i>
                                </div>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
    <!-- Capture End -->
</div>
