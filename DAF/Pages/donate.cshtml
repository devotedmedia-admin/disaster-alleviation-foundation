@page
@model DAF.Pages.donateModel
@{
    ViewData["Title"] = "Donations";
}
<div>
    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center">
            <h1 class="display-4 text-white animated slideInDown mb-4">Donate</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                    <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                    <li class="breadcrumb-item text-primary active" aria-current="page">Donate</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Donate Start -->
    <div class="container-fluid py-5">
        <div class="container">
            <div class="row g-5 ">
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                    <div class="d-inline-block rounded-pill bg-secondary text-primary py-1 px-3 mb-3">Donate Now</div>
                    <h1 class="display-6 mb-5">Your Donation Changes A Life</h1>
                    <p class="mb-0">Change a life today by making a donation to help those disadvanteg by disasters. Any form of donation 
                        is welcomed because people may not need the same thing so your donation may have an inpact on someone as it does to you.</p>
                </div>
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                    <div class="h-100 bg-secondary p-5">
                        <form method="post">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label>(Optional)</label>
                                    <div class="form-floating">
                                        <input type="text" name="name" class="form-control bg-light border-0" id="username" placeholder="Your Name">
                                        <label for="username">Name</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label>(Optional)</label>
                                    <div class="form-floating">
                                        <input type="email" name="email" class="form-control bg-light border-0" id="userEmail" placeholder="Your Email">
                                        <label for="userEmail">Email</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label>Select Category(Required*)</label>
                                    <select class="form-control" name="category" id="userCategory">
                                        <option value="MONEY" selected> Money </option>
                                        <option value="CLOTHES"> Clothes </option>
                                        <option value="NonPerishableFoods"> Non‐perishable foods </option>
                                        <option value="OTHER"> Other </option>
                                    </select>
                                    <label for="userCategory">Category</label>
                                </div>
                                <div class="col-12">
                                    <label>(Optional)</label>
                                    <div class="form-floating">
                                        <input type="text" name="customCategory" class="form-control bg-light border-0" id="userCustomeCategory" placeholder="Enter category name">
                                        <label for="userCustomeCategory">Enter category name if selected other on categories</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label>(Required*)</label>
                                    <div class="form-floating">
                                        <input type="date" name="date" class="form-control bg-light border-0" id="userDate" placeholder="Date">
                                        <label for="userDate">Date</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label>(Required*)</label>
                                    <div class="form-floating">
                                        <input type="text" name="amount" class="form-control bg-light border-0" id="userAmount" placeholder="Amount of Money / Number of items">
                                        <label for="userAmount">Amount of Money / Number of items</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label>(Optional)</label>
                                    <div class="form-floating">
                                        <textarea class="form-control" name="description" placeholder="Describe each item here" id="userDescription" style="height: 100px"></textarea>
                                        <label for="userDescription">Describe items if goods category is selected</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary px-5" style="height: 60px;" type="submit">
                                        Donate Now
                                        <div class="d-inline-flex btn-sm-square bg-white text-primary rounded-circle ms-2">
                                            <i class="fa fa-arrow-right"></i>
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </form>
                        @if(Model.notEnoughData)
                        {
                            <h5>Enter the required/mandatory fields.</h5>
                        }
                        else if(Model.donationSent){
                            <h5>Thank you! Donations have been successfully sent.</h5>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Donate End -->
</div>
